<VBox fx:id="statisticsMain" prefHeight="684.0" prefWidth="874.0" stylesheets="@../styles/main.css" xmlns="http://javafx.com/javafx/8.0.171" xmlns:fx="http://javafx.com/fxml/1" fx:controller="controller.StatisticsController">
   <children>
      <HBox prefHeight="100.0" prefWidth="200.0" styleClass="header">
         <children>
            <Button mnemonicParsing="false" onAction="#openStatisticsPane">
               <graphic>
                  <ImageView>
                     <image>
                        <Image url="@../assets/icons/caret-left.png" />
                     </image>
                  </ImageView>
               </graphic>
            </Button>
            <Label text="Statistics" />
         </children>
      </HBox>
      <ScrollPane prefHeight="474.0" prefWidth="617.0" VBox.vgrow="ALWAYS">
         <content>
            <FlowPane hgap="20.0" prefHeight="625.0" prefWidth="843.0" vgap="20.0">
               <children>
                  <LineChart fx:id="lineChart" prefHeight="405.0" prefWidth="515.0">
                    <xAxis>
                      <CategoryAxis side="BOTTOM" tickLabelFill="#eeeeee" />
                    </xAxis>
                    <yAxis>
                      <NumberAxis side="LEFT" tickLabelFill="#eeeeee" />
                    </yAxis>
                  </LineChart>
                  <VBox prefHeight="405.0" prefWidth="242.0" spacing="10.0" style="-fx-background-color: #31363F; -fx-background-radius: 10px;">
                     <children>
                        <Label text="Total expense: 1234 €">
                           <font>
                              <Font size="17.0" />
                           </font>
                        </Label>
                        <Label layoutX="30.0" layoutY="30.0" text="This month: 123 €">
                           <font>
                              <Font size="14.0" />
                           </font>
                        </Label>
                        <Label layoutX="30.0" layoutY="64.0" text="This year: 1234 €">
                           <font>
                              <Font size="14.0" />
                           </font>
                        </Label>
                     </children>
                     <padding>
                        <Insets bottom="20.0" left="20.0" right="20.0" top="20.0" />
                     </padding>
                  </VBox>
               </children>
               <padding>
                  <Insets bottom="20.0" left="20.0" right="20.0" />
               </padding>
            </FlowPane>
         </content>
      </ScrollPane>
   </children>
</VBox>
